{
    "compilerOptions": {
      "baseUrl": "./src",
      "downlevelIteration": true,
      "esModuleInterop": true,
      "typeRoots": ["./src/@types", "./node_modules/@types"],
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "paths": {
        "@app/*": [
            "./*"
        ],
        "@pages/*": [
            "pages/*"
        ],
        "@assets/*": [
            "assets/*"
        ],
        "@store/*": [
            "store/*"
        ],
        "@tests/*": [
            "tests/*"
        ],
        "@components/*": [
            "components/*"
        ]
      },
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
    },
    "include": [
      "./src/**/*"
    ]
}